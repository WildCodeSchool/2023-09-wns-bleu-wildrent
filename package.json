    "argon2": "^0.31.2",
    "eslint": "^8.56.0",
    "graphql": "^16.8.1",
    "husky": "^9.0.7",
    "js-cookie": "^3.0.5",
    "query-string": "^9.1.0",
    "react-icons": "^5.1.0",
